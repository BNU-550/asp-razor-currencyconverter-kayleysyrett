@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <header class="text-center">
        <h1 class="display-4">Welcome to Razor Pages</h1>
        <h2>By @Model.FullName</h2>
    </header>
    <br/><br/>
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label>Name</label>
            <input type="text" required placeholder="Your Full Name" asp-for="FullName" />
        </p>
        <p class="col-sm-2">
            <label>Email</label>
            <input type="email" required name="email" />
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">
            Register
            </button>
        </p>
        <p class="col-12">
            @ViewData["Message"]
        </p>
    </form>

</div>
